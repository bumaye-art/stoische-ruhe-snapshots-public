  "post_content_raw": "<!-- wp:group {\"align\":\"full\",\"layout\":{\"type\":\"constrained\"}} -->\n<div class=\"wp-block-group alignfull\"><!-- wp:cover {\"url\":\"https://stoische-ruhe.de/wp-content/uploads/2026/01/mountain-8499331_1920.jpg\",\"id\":1072,\"dimRatio\":50,\"overlayColor\":\"white\",\"isUserOverlayColor\":true,\"minHeight\":320,\"minHeightUnit\":\"px\",\"isDark\":false,\"sizeSlug\":\"full\",\"align\":\"full\"} -->\n<div class=\"wp-block-cover alignfull is-light\" style=\"min-height:320px\"><img class=\"wp-block-cover__image-background wp-image-1072 size-full\" alt=\"\" src=\"https://stoische-ruhe.de/wp-content/uploads/2026/01/mountain-8499331_1920.jpg\" data-object-fit=\"cover\"/><span aria-hidden=\"true\" class=\"wp-block-cover__background has-white-background-color has-background-dim\"></span><div class=\"wp-block-cover__inner-container\"><!-- wp:heading {\"textAlign\":\"center\",\"level\":1} -->\n<h1 class=\"wp-block-heading has-text-align-center\">Klar denken – ruhig handeln</h1>\n<!-- /wp:heading -->\n\n<!-- wp:paragraph {\"align\":\"center\",\"className\":\"rk-intro\"} -->\n<p class=\"has-text-align-center rk-intro\">Hier findest du Texte, Begriffe und Personen rund um Stoizismus.</p>\n<!-- /wp:paragraph -->\n\n<!-- wp:buttons {\"className\":\"rk-cta-row\",\"layout\":{\"type\":\"flex\",\"justifyContent\":\"center\",\"flexWrap\":\"nowrap\"}} -->\n<div class=\"wp-block-buttons rk-cta-row\"><!-- wp:button {\"backgroundColor\":\"palette-color-3\",\"className\":\"is-style-fill\"} -->\n<div class=\"wp-block-button is-style-fill\"><a class=\"wp-block-button__link has-palette-color-3-background-color has-background wp-element-button\" href=\"https://stoische-ruhe.de/einstieg/\"><strong>Einstieg (15 Minuten)</strong></a></div>\n<!-- /wp:button --></div>\n<!-- /wp:buttons --></div></div>\n<!-- /wp:cover -->\n\n<!-- wp:group {\"layout\":{\"type\":\"constrained\"}} -->\n<div class=\"wp-block-group\"><!-- wp:heading {\"textAlign\":\"center\"} -->\n<h2 class=\"wp-block-heading has-text-align-center\">Womit willst du beginnen?</h2>\n<!-- /wp:heading -->\n\n<!-- wp:paragraph {\"align\":\"center\",\"className\":\"rk-muted-label\"} -->\n<p class=\"has-text-align-center rk-muted-label\">Was brauchst du gerade? Nimm einen Pfad – und folge 3–5 klaren Schritten.</p>\n<!-- /wp:paragraph -->\n\n<!-- wp:columns {\"className\":\"rk-equal-cards\"} -->\n<div class=\"wp-block-columns rk-equal-cards\"><!-- wp:column -->\n<div class=\"wp-block-column\"><!-- wp:group {\"style\":{\"border\":{\"color\":\"#E7E2D8\",\"width\":\"1px\",\"radius\":\"16px\"},\"spacing\":{\"padding\":{\"top\":\"18px\",\"right\":\"18px\",\"bottom\":\"18px\",\"left\":\"18px\"}},\"color\":{\"background\":\"#f3f1ec\"}},\"layout\":{\"type\":\"constrained\"}} -->\n<div class=\"wp-block-group has-border-color has-background\" style=\"border-color:#E7E2D8;border-width:1px;border-radius:16px;background-color:#f3f1ec;padding-top:18px;padding-right:18px;padding-bottom:18px;padding-left:18px\"><!-- wp:heading {\"textAlign\":\"center\",\"level\":3} -->\n<h3 class=\"wp-block-heading has-text-align-center\">Stress akut senken</h3>\n<!-- /wp:heading -->\n\n<!-- wp:paragraph {\"align\":\"center\"} -->\n<p class=\"has-text-align-center\">Kurz runterregeln: Eindruck benennen, Urteil prüfen, nächsten Schritt wählen.</p>\n<!-- /wp:paragraph -->\n\n<!-- wp:list {\"className\":\"wp-block-list\"} -->\n<ul class=\"wp-block-list\"><!-- wp:list-item -->\n<li><a href=\"https://stoische-ruhe.de/einstieg/\">Einstieg</a></li>\n<!-- /wp:list-item -->\n\n<!-- wp:list-item -->\n<li><a href=\"https://stoische-ruhe.de/die-pause-zwischen-eindruck-und-urteil/\">Die Pause zwischen Eindruck und Urteil</a></li>\n<!-- /wp:list-item -->\n\n<!-- wp:list-item -->\n<li><a href=\"https://stoische-ruhe.de/begriffe-konzepte/kontrolle/\">Begriff: Kontrolle</a></li>\n<!-- /wp:list-item --></ul>\n<!-- /wp:list --></div>\n<!-- /wp:group --></div>\n<!-- /wp:column -->\n\n<!-- wp:column -->\n<div class=\"wp-block-column\"><!-- wp:group {\"style\":{\"border\":{\"color\":\"#E7E2D8\",\"width\":\"1px\",\"radius\":\"16px\"},\"spacing\":{\"padding\":{\"top\":\"18px\",\"right\":\"18px\",\"bottom\":\"18px\",\"left\":\"18px\"}},\"color\":{\"background\":\"#f3f1ec\"}},\"layout\":{\"type\":\"constrained\"}} -->\n<div class=\"wp-block-group has-border-color has-background\" style=\"border-color:#E7E2D8;border-width:1px;border-radius:16px;background-color:#f3f1ec;padding-top:18px;padding-right:18px;padding-bottom:18px;padding-left:18px\"><!-- wp:heading {\"textAlign\":\"center\",\"level\":3} -->\n<h3 class=\"wp-block-heading has-text-align-center\">Stoizismus verstehen</h3>\n<!-- /wp:heading -->\n\n<!-- wp:paragraph {\"align\":\"center\"} -->\n<p class=\"has-text-align-center\">Einmal sauber ordnen: Begriffe, Texte und Personen – ohne Theorieballast.</p>\n<!-- /wp:paragraph -->\n\n<!-- wp:list {\"className\":\"wp-block-list\"} -->\n<ul class=\"wp-block-list\"><!-- wp:list-item -->\n<li><a href=\"https://stoische-ruhe.de/begriffe-konzepte/\">Begriffe &amp; Konzepte</a></li>\n<!-- /wp:list-item -->\n\n<!-- wp:list-item -->\n<li><a href=\"https://stoische-ruhe.de/stoische-texte/\" title=\"Stoische Texte\">Stoische Texte</a></li>\n<!-- /wp:list-item -->\n\n<!-- wp:list-item -->\n<li><a href=\"https://stoische-ruhe.de/warum-stoische-ruhe-nichts-mit-gleichgueltigkeit-zu-tun-hat/\">Stoische Ruhe ist nicht Gleichgültigkeit</a></li>\n<!-- /wp:list-item --></ul>\n<!-- /wp:list --></div>\n<!-- /wp:group --></div>\n<!-- /wp:column -->\n\n<!-- wp:column -->\n<div class=\"wp-block-column\"><!-- wp:group {\"style\":{\"border\":{\"color\":\"#E7E2D8\",\"width\":\"1px\",\"radius\":\"16px\"},\"spacing\":{\"padding\":{\"top\":\"18px\",\"right\":\"18px\",\"bottom\":\"18px\",\"left\":\"18px\"}},\"color\":{\"background\":\"#f3f1ec\"}},\"layout\":{\"type\":\"constrained\"}} -->\n<div class=\"wp-block-group has-border-color has-background\" style=\"border-color:#E7E2D8;border-width:1px;border-radius:16px;background-color:#f3f1ec;padding-top:18px;padding-right:18px;padding-bottom:18px;padding-left:18px\"><!-- wp:heading {\"textAlign\":\"center\",\"level\":3} -->\n<h3 class=\"wp-block-heading has-text-align-center\">Täglich üben</h3>\n<!-- /wp:heading -->\n\n<!-- wp:paragraph {\"align\":\"center\"} -->\n<p class=\"has-text-align-center\">Klein anfangen, dranbleiben: Fokus, Selbstführung, Übung.</p>\n<!-- /wp:paragraph -->\n\n<!-- wp:list {\"className\":\"wp-block-list\"} -->\n<ul class=\"wp-block-list\"><!-- wp:list-item -->\n<li><a href=\"https://stoische-ruhe.de/begriffe-konzepte/uebung-askesis/\">Übung (Askesis)</a></li>\n<!-- /wp:list-item -->\n\n<!-- wp:list-item -->\n<li><a href=\"https://stoische-ruhe.de/begriffe-konzepte/selbstfuehrung/\">Begriff: Selbstführung</a></li>\n<!-- /wp:list-item -->\n\n<!-- wp:list-item -->\n<li><a href=\"https://stoische-ruhe.de/stoische-uebung-ist-keine-routine/\">Warum stoische Übung keine Routine ist</a></li>\n<!-- /wp:list-item --></ul>\n<!-- /wp:list --></div>\n<!-- /wp:group --></div>\n<!-- /wp:column --></div>\n<!-- /wp:columns --></div>\n<!-- /wp:group -->\n\n<!-- wp:separator {\"className\":\"is-style-default\"} -->\n<hr class=\"wp-block-separator has-alpha-channel-opacity is-style-default\"/>\n<!-- /wp:separator -->\n\n<!-- wp:group {\"layout\":{\"type\":\"constrained\"}} -->\n<div class=\"wp-block-group\"><!-- wp:group {\"layout\":{\"type\":\"constrained\"}} -->\n<div class=\"wp-block-group\"><!-- wp:heading {\"textAlign\":\"center\"} -->\n<h2 class=\"wp-block-heading has-text-align-center\">Was ist Stoizismus?</h2>\n<!-- /wp:heading -->\n\n<!-- wp:paragraph {\"align\":\"left\",\"className\":\"rk-intro\"} -->\n<p class=\"has-text-align-left rk-intro\">Stoizismus ist eine praktische Lebensphilosophie: Er hilft, zwischen Eindruck und Urteil eine kurze Lücke zu schaffen – und daraus ruhiger zu handeln. Nicht durch neue Gedanken, sondern durch klarere Unterscheidungen.</p>\n<!-- /wp:paragraph -->\n\n<!-- wp:list -->\n<ul class=\"wp-block-list\"><!-- wp:list-item -->\n<li><strong>Kontrolle klären:</strong> In deiner Hand liegen Urteil, Absicht und Handlung – nicht Ergebnis, Meinung anderer oder Zufall.</li>\n<!-- /wp:list-item -->\n\n<!-- wp:list-item -->\n<li><strong>Urteil prüfen:</strong> Ereignisse sind zunächst nur „da“. Bedeutung entsteht durch die Bewertung, der du zustimmst.</li>\n<!-- /wp:list-item -->\n\n<!-- wp:list-item -->\n<li><strong>Tugend als Maßstab:</strong> Weisheit, Gerechtigkeit, Tapferkeit und Maß ordnen Handeln – auch wenn die Lage unruhig bleibt.</li>\n<!-- /wp:list-item --></ul>\n<!-- /wp:list -->\n\n<!-- wp:paragraph -->\n<p>Stoizismus ist nicht „alles egal“ und kein Weg, Gefühle wegzudrücken. Er ist auch keine Härte gegen dich selbst. Es geht um Klarheit im Urteil, damit Reaktion nicht automatisch wird.</p>\n<!-- /wp:paragraph --></div>\n<!-- /wp:group -->\n\n<!-- wp:heading {\"level\":3} -->\n<h3 class=\"wp-block-heading\">Mini-Übung</h3>\n<!-- /wp:heading -->\n\n<!-- wp:paragraph -->\n<p>Wenn du nur wenig Zeit hast, reicht eine klare Reihenfolge: erst wahrnehmen, dann prüfen, dann handeln.</p>\n<!-- /wp:paragraph -->\n\n<!-- wp:list {\"ordered\":true} -->\n<ol class=\"wp-block-list\"><!-- wp:list-item -->\n<li>Benenne den Eindruck: „Es ist passiert, dass …“</li>\n<!-- /wp:list-item -->\n\n<!-- wp:list-item -->\n<li>Urteil prüfen: „Ich bewerte es gerade als …“</li>\n<!-- /wp:list-item -->\n\n<!-- wp:list-item -->\n<li>Haltung wählen: „Was liegt in deiner Hand?“</li>\n<!-- /wp:list-item --></ol>\n<!-- /wp:list -->\n\n<!-- wp:paragraph {\"align\":\"center\",\"className\":\"rk-muted-links\"} -->\n<p class=\"has-text-align-center rk-muted-links\">Weiter: <a href=\"https://stoische-ruhe.de/begriffe-konzepte/wahrnehmung/\">Wahrnehmung</a> · <a href=\"https://stoische-ruhe.de/stoische-texte/ueber-das-urteil/\">Über das Urteil</a> · <a href=\"https://stoische-ruhe.de/begriffe-konzepte/kontrolle/\">Kontrolle</a></p>\n<!-- /wp:paragraph -->\n\n<!-- wp:separator -->\n<hr class=\"wp-block-separator has-alpha-channel-opacity\"/>\n<!-- /wp:separator -->\n\n<!-- wp:group {\"layout\":{\"type\":\"constrained\"}} -->\n<div class=\"wp-block-group\"><!-- wp:heading {\"textAlign\":\"center\"} -->\n<h2 class=\"wp-block-heading has-text-align-center\">Was Stoizismus nicht ist</h2>\n<!-- /wp:heading -->\n\n<!-- wp:paragraph {\"align\":\"left\",\"className\":\"rk-intro\"} -->\n<p class=\"has-text-align-left rk-intro\">Stoizismus wird oft über zwei falsche Bilder beschrieben: als Kälte – oder als Kontrolle über alles. Beides verfehlt den Kern. Stoisch ist nicht, weniger Mensch zu sein, sondern klarer zu urteilen.</p>\n<!-- /wp:paragraph -->\n\n<!-- wp:list -->\n<ul class=\"wp-block-list\"><!-- wp:list-item -->\n<li><strong>Nicht Gleichgültigkeit:</strong> Stoische Ruhe heißt nicht „egal“. Man kann sich kümmern – ohne sich innerlich festzuklammern.</li>\n<!-- /wp:list-item -->\n\n<!-- wp:list-item -->\n<li><strong>Nicht Gefühlsunterdrückung:</strong> Gefühle sind Hinweise. Stoisch ist, das Urteil hinter dem Gefühl zu prüfen, statt es automatisch zu glauben.</li>\n<!-- /wp:list-item -->\n\n<!-- wp:list-item -->\n<li><strong>Nicht Kontrollzwang:</strong> Es geht nicht darum, Ergebnisse zu erzwingen, sondern Zuständigkeiten zu trennen: Urteil und Handlung sind „mein“, das Außen bleibt beweglich.</li>\n<!-- /wp:list-item -->\n\n<!-- wp:list-item -->\n<li><strong>Nicht passiver Rückzug:</strong> Stoizismus ist keine Ausrede, nichts zu tun. Er ordnet das Handeln an Vernunft und Tugend – gerade in schwierigen Lagen.</li>\n<!-- /wp:list-item -->\n\n<!-- wp:list-item -->\n<li><strong>Nicht toxische Positivität:</strong> Stoisch ist nicht „alles ist gut“, sondern: „Was ist tatsächlich da – und was mache ich daraus?“</li>\n<!-- /wp:list-item --></ul>\n<!-- /wp:list -->\n\n<!-- wp:paragraph {\"align\":\"left\"} -->\n<p class=\"has-text-align-left\">Ein einfacher Prüfstein: Wenn „stoisch sein“ dich härter, tauber oder zynischer macht, ist meist nicht die Stoa am Werk, sondern ein ungeprüftes Urteil über Stärke.</p>\n<!-- /wp:paragraph --></div>\n<!-- /wp:group -->\n\n<!-- wp:separator -->\n<hr class=\"wp-block-separator has-alpha-channel-opacity\"/>\n<!-- /wp:separator -->\n\n<!-- wp:heading {\"textAlign\":\"center\"} -->\n<h2 class=\"wp-block-heading has-text-align-center\">Die vier Kardinaltugenden</h2>\n<!-- /wp:heading -->\n\n<!-- wp:paragraph {\"align\":\"left\"} -->\n<p class=\"has-text-align-left\">Die vier Kardinaltugenden des Stoizismus bilden die Grundlage für ein tugendhaftes, glückliches Leben im Einklang mit der Natur. Sie helfen, zwischen kontrollierbaren und unkontrollierbaren Dingen zu unterscheiden, fördern das Gemeinwohl, stärken die Widerstandsfähigkeit gegen Ängste und lehren Selbstbeherrschung.</p>\n<!-- /wp:paragraph -->\n\n<!-- wp:uagb/container {\"block_id\":\"3feb9967\",\"isBlockRootParent\":true} -->\n<div class=\"wp-block-uagb-container uagb-block-3feb9967 alignfull uagb-is-root-container\"><div class=\"uagb-container-inner-blocks-wrap\"><!-- wp:columns -->\n<div class=\"wp-block-columns\"><!-- wp:column {\"verticalAlignment\":\"center\"} -->\n<div class=\"wp-block-column is-vertically-aligned-center\"><!-- wp:heading {\"textAlign\":\"left\",\"level\":3} -->\n<h3 class=\"wp-block-heading has-text-align-left\"><strong>Weisheit</strong></h3>\n<!-- /wp:heading -->\n\n<!-- wp:paragraph {\"align\":\"left\"} -->\n<p class=\"has-text-align-left\">Die Fähigkeit, das Gute zu erkennen und richtig zu entscheiden.</p>\n<!-- /wp:paragraph -->\n\n<!-- wp:buttons -->\n<div class=\"wp-block-buttons\"><!-- wp:button -->\n<div class=\"wp-block-button\"><a class=\"wp-block-button__link wp-element-button\" href=\"https://stoische-ruhe.de/begriffe-konzepte/weisheit/\">Mehr zur Weisheit</a></div>\n<!-- /wp:button --></div>\n<!-- /wp:buttons --></div>\n<!-- /wp:column -->\n\n<!-- wp:column {\"verticalAlignment\":\"center\"} -->\n<div class=\"wp-block-column is-vertically-aligned-center\"><!-- wp:heading {\"textAlign\":\"left\",\"level\":3} -->\n<h3 class=\"wp-block-heading has-text-align-left\"><strong>Gerechtigkeit</strong></h3>\n<!-- /wp:heading -->\n\n<!-- wp:paragraph {\"align\":\"left\"} -->\n<p class=\"has-text-align-left\">Jedem das Seine zukommen lassen und die Rechte anderer wahren.</p>\n<!-- /wp:paragraph -->\n\n<!-- wp:buttons -->\n<div class=\"wp-block-buttons\"><!-- wp:button -->\n<div class=\"wp-block-button\"><a class=\"wp-block-button__link wp-element-button\" href=\"https://stoische-ruhe.de/begriffe-konzepte/gerechtigkeit/\">Mehr zu Gerechtigkeit</a></div>\n<!-- /wp:button --></div>\n<!-- /wp:buttons --></div>\n<!-- /wp:column -->\n\n<!-- wp:column {\"verticalAlignment\":\"center\"} -->\n<div class=\"wp-block-column is-vertically-aligned-center\"><!-- wp:heading {\"textAlign\":\"left\",\"level\":3} -->\n<h3 class=\"wp-block-heading has-text-align-left\"><strong>Tapferkeit</strong></h3>\n<!-- /wp:heading -->\n\n<!-- wp:paragraph {\"align\":\"left\"} -->\n<p class=\"has-text-align-left\">Für das Gute einzustehen, auch wenn es  mal schwierig ist.</p>\n<!-- /wp:paragraph -->\n\n<!-- wp:buttons -->\n<div class=\"wp-block-buttons\"><!-- wp:button -->\n<div class=\"wp-block-button\"><a class=\"wp-block-button__link wp-element-button\" href=\"https://stoische-ruhe.de/begriffe-konzepte/tapferkeit/\">Mehr zu Tapferkeit</a></div>\n<!-- /wp:button --></div>\n<!-- /wp:buttons --></div>\n<!-- /wp:column -->\n\n<!-- wp:column {\"verticalAlignment\":\"center\"} -->\n<div class=\"wp-block-column is-vertically-aligned-center\"><!-- wp:heading {\"textAlign\":\"left\",\"level\":3} -->\n<h3 class=\"wp-block-heading has-text-align-left\"><strong>Mäßigung</strong></h3>\n<!-- /wp:heading -->\n\n<!-- wp:paragraph {\"align\":\"left\"} -->\n<p class=\"has-text-align-left\">Selbstkontrolle und Balance im Umgang mit Trieben und Bedürfnissen.</p>\n<!-- /wp:paragraph -->\n\n<!-- wp:buttons -->\n<div class=\"wp-block-buttons\"><!-- wp:button -->\n<div class=\"wp-block-button\"><a class=\"wp-block-button__link wp-element-button\" href=\"https://stoische-ruhe.de/begriffe-konzepte/maessigung/\">Mehr zur Mäßigung</a></div>\n<!-- /wp:button --></div>\n<!-- /wp:buttons --></div>\n<!-- /wp:column --></div>\n<!-- /wp:columns --></div></div>\n<!-- /wp:uagb/container -->\n\n<!-- wp:heading {\"textAlign\":\"center\",\"level\":3} -->\n<h3 class=\"wp-block-heading has-text-align-center\">Tugend im stoischen Sinn</h3>\n<!-- /wp:heading -->\n\n<!-- wp:paragraph -->\n<p>Tugend ist das höchste und einzige Gut: Nicht, weil sie „perfekt“ macht, sondern weil sie das einzige ist, das wirklich in unserer Verantwortung liegt. Ergebnis, Zufall und äußere Anerkennung können angenehm sein – aber sie sind kein Maßstab für ein gutes Leben.</p>\n<!-- /wp:paragraph -->\n\n<!-- wp:paragraph -->\n<p>Die Kardinaltugenden sind keine Checkliste. Sie beschreiben, wie vernünftiges Leben praktisch aussieht – je nach Situation: urteilen, handeln, standhalten, maßhalten.</p>\n<!-- /wp:paragraph -->\n\n<!-- wp:separator -->\n<hr class=\"wp-block-separator has-alpha-channel-opacity\"/>\n<!-- /wp:separator -->\n\n<!-- wp:heading {\"textAlign\":\"center\"} -->\n<h2 class=\"wp-block-heading has-text-align-center\">Aktuell im Blog</h2>\n<!-- /wp:heading -->\n\n<!-- wp:paragraph {\"align\":\"center\",\"className\":\"rk-muted-label\"} -->\n<p class=\"has-text-align-center rk-muted-label\">Kurze Texte, die einen Begriff schärfen, eine Verwechslung auflösen oder eine stoische Perspektive klären.</p>\n<!-- /wp:paragraph -->\n\n<!-- wp:columns -->\n<div class=\"wp-block-columns\"><!-- wp:column -->\n<div class=\"wp-block-column\"><!-- wp:group {\"style\":{\"border\":{\"color\":\"#E7E2D8\",\"width\":\"1px\",\"radius\":\"16px\"},\"spacing\":{\"padding\":{\"top\":\"18px\",\"right\":\"18px\",\"bottom\":\"18px\",\"left\":\"18px\"}},\"color\":{\"background\":\"#f3f1ec\"}},\"layout\":{\"type\":\"constrained\"}} -->\n<div class=\"wp-block-group has-border-color has-background\" style=\"border-color:#E7E2D8;border-width:1px;border-radius:16px;background-color:#f3f1ec;padding-top:18px;padding-right:18px;padding-bottom:18px;padding-left:18px\"><!-- wp:heading {\"textAlign\":\"center\",\"level\":3} -->\n<h3 class=\"wp-block-heading has-text-align-center\"><a href=\"https://stoische-ruhe.de/warum-stoische-ruhe-nichts-mit-gleichgueltigkeit-zu-tun-hat/\">Stoische Ruhe ist nicht Gleichgültigkeit</a></h3>\n<!-- /wp:heading -->\n\n<!-- wp:image {\"id\":424,\"width\":\"244px\",\"sizeSlug\":\"full\",\"linkDestination\":\"none\",\"align\":\"center\"} -->\n<figure class=\"wp-block-image aligncenter size-full is-resized\"><img src=\"https://stoische-ruhe.de/wp-content/uploads/2026/01/seneca-8007997_1920.jpg\" alt=\"\" class=\"wp-image-424\" style=\"width:244px\"/></figure>\n<!-- /wp:image -->\n\n<!-- wp:paragraph {\"align\":\"center\"} -->\n<p class=\"has-text-align-center\">Warum „ruhig“ nicht „egal“ bedeutet – und wie sich Klarheit im Urteil von Abwehr unterscheidet.</p>\n<!-- /wp:paragraph --></div>\n<!-- /wp:group --></div>\n<!-- /wp:column -->\n\n<!-- wp:column -->\n<div class=\"wp-block-column\"><!-- wp:group {\"style\":{\"border\":{\"color\":\"#E7E2D8\",\"width\":\"1px\",\"radius\":\"16px\"},\"spacing\":{\"padding\":{\"top\":\"18px\",\"right\":\"18px\",\"bottom\":\"18px\",\"left\":\"18px\"}},\"color\":{\"background\":\"#f3f1ec\"}},\"layout\":{\"type\":\"constrained\"}} -->\n<div class=\"wp-block-group has-border-color has-background\" style=\"border-color:#E7E2D8;border-width:1px;border-radius:16px;background-color:#f3f1ec;padding-top:18px;padding-right:18px;padding-bottom:18px;padding-left:18px\"><!-- wp:heading {\"textAlign\":\"center\",\"level\":3} -->\n<h3 class=\"wp-block-heading has-text-align-center\"><a href=\"https://stoische-ruhe.de/warum-stoische-kontrolle-kein-kontrollzwang-ist/\" title=\"Stoische Kontrolle ist kein Kontrollzwang\">Stoische Kontrolle ist kein Kontrollzwang</a></h3>\n<!-- /wp:heading -->\n\n<!-- wp:image {\"id\":700,\"width\":\"244px\",\"height\":\"auto\",\"aspectRatio\":\"1.4992237949668128\",\"sizeSlug\":\"full\",\"linkDestination\":\"none\",\"align\":\"center\"} -->\n<figure class=\"wp-block-image aligncenter size-full is-resized\"><img src=\"https://stoische-ruhe.de/wp-content/uploads/2026/01/Philosophischer-Blick-und-antike-Objekte.png\" alt=\"\" class=\"wp-image-700\" style=\"aspect-ratio:1.4992237949668128;width:244px;height:auto\"/></figure>\n<!-- /wp:image -->\n\n<!-- wp:paragraph {\"align\":\"center\"} -->\n<p class=\"has-text-align-center\">Wie man innerlich ruhig bleibt, ohne Verantwortung abzugeben oder Distanz zu spielen.</p>\n<!-- /wp:paragraph --></div>\n<!-- /wp:group --></div>\n<!-- /wp:column -->\n\n<!-- wp:column -->\n<div class=\"wp-block-column\"><!-- wp:group {\"style\":{\"border\":{\"color\":\"#E7E2D8\",\"width\":\"1px\",\"radius\":\"16px\"},\"spacing\":{\"padding\":{\"top\":\"18px\",\"right\":\"18px\",\"bottom\":\"18px\",\"left\":\"18px\"}},\"color\":{\"background\":\"#f3f1ec\"}},\"layout\":{\"type\":\"constrained\"}} -->\n<div class=\"wp-block-group has-border-color has-background\" style=\"border-color:#E7E2D8;border-width:1px;border-radius:16px;background-color:#f3f1ec;padding-top:18px;padding-right:18px;padding-bottom:18px;padding-left:18px\"><!-- wp:heading {\"textAlign\":\"center\",\"level\":3} -->\n<h3 class=\"wp-block-heading has-text-align-center\"><a href=\"https://stoische-ruhe.de/lob-und-kritik-der-gleiche-mechanismus/\" title=\"Lob und Kritik: Der gleiche Mechanismus\">Lob und Kritik: Der gleiche Mechanismus</a></h3>\n<!-- /wp:heading -->\n\n<!-- wp:image {\"id\":427,\"width\":\"244px\",\"sizeSlug\":\"full\",\"linkDestination\":\"none\",\"align\":\"center\"} -->\n<figure class=\"wp-block-image aligncenter size-full is-resized\"><img src=\"https://stoische-ruhe.de/wp-content/uploads/2026/01/marcus-aurelius-8062793_1920.jpg\" alt=\"\" class=\"wp-image-427\" style=\"width:244px\"/></figure>\n<!-- /wp:image -->\n\n<!-- wp:paragraph {\"align\":\"center\"} -->\n<p class=\"has-text-align-center\">Lob fühlt sich leicht an, Kritik schwer. Beides wirkt, als käme es von außen und beträfe den eigenen Wert.</p>\n<!-- /wp:paragraph --></div>\n<!-- /wp:group --></div>\n<!-- /wp:column --></div>\n<!-- /wp:columns -->\n\n<!-- wp:paragraph {\"align\":\"center\",\"className\":\"rk-muted-links\"} -->\n<p class=\"has-text-align-center rk-muted-links\"><a href=\"https://stoische-ruhe.de/blog/\" title=\"Blog\">Alle Blogbeiträge →</a></p>\n<!-- /wp:paragraph -->\n\n<!-- wp:separator -->\n<hr class=\"wp-block-separator has-alpha-channel-opacity\"/>\n<!-- /wp:separator -->\n\n<!-- wp:group {\"style\":{\"border\":{\"color\":\"#E7E2D8\",\"width\":\"1px\",\"radius\":\"16px\"},\"spacing\":{\"padding\":{\"top\":\"22px\",\"right\":\"22px\",\"bottom\":\"22px\",\"left\":\"22px\"}},\"color\":{\"background\":\"#f3f1ec\"}},\"layout\":{\"type\":\"constrained\"}} -->\n<div class=\"wp-block-group has-border-color has-background\" style=\"border-color:#E7E2D8;border-width:1px;border-radius:16px;background-color:#f3f1ec;padding-top:22px;padding-right:22px;padding-bottom:22px;padding-left:22px\"><!-- wp:paragraph {\"className\":\"rk-muted-label\"} -->\n<p class=\"rk-muted-label\"><strong>Hinweis</strong></p>\n<!-- /wp:paragraph -->\n\n<!-- wp:paragraph -->\n<p>Diese Seite ist ein Wegweiser. Die Inhalte sind unabhängig lesbar und stehen für sich. Wenn du wiederkommst: Wähle einfach den Bereich, der gerade passt.</p>\n<!-- /wp:paragraph --></div>\n<!-- /wp:group -->\n\n<!-- wp:spacer {\"height\":\"40px\"} -->\n<div style=\"height:40px\" aria-hidden=\"true\" class=\"wp-block-spacer\"></div>\n<!-- /wp:spacer --></div>\n<!-- /wp:group --></div>\n<!-- /wp:group -->"
